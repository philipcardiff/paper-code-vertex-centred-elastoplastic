#!/bin/bash

# Source tutorial run functions
. $WM_PROJECT_DIR/bin/tools/RunFunctions

# Source solids4Foam scripts
source solids4FoamScripts.sh

SUFFIX="vertex"

BASE="base"

if [[ -d "${SUFFIX}.1" ]]
then
    echo "Case ${SUFFIX}.1 already exists: please remove it"; echo
    exit 1;
fi

# Run cases
for i in `seq 1 4`;
do
    CASE="${SUFFIX}.$i"
    echo "Running ${CASE}"

    # Copy template case
    cp -r "${BASE}" "${CASE}"

    # Enter the case
    cd "${CASE}"

    # Set the mesh spacing
    #DX=$(echo "scale=10; sqrt(2.0*2.0 - 0.25*3.1415926536*0.5*0.5)/(sqrt(4^($i-1))*250)" | bc)
    DX=$(echo "scale=10; 0.1/(2^(${i}-1))" | bc)
    sed -i "s/dx = 0.1;/dx = ${DX};/g" plateHole.geo
    sed -i "s/cn = 10;/cn = 10*(2^(${i}-1));/g" plateHole.geo

    # Create the mesh
    solids4Foam::runApplication gmsh -3 -format msh2 -algo del2d plateHole.geo
    solids4Foam::runApplication gmshToFoam plateHole.msh
    solids4Foam::runApplication changeDictionary

    # Run the solver
    solids4Foam::runApplication solids4Foam

    # Navigate back to the parent directory
    cd ..
done

# Extract the results
# echo "Running Allpost"
# ./Allpost
